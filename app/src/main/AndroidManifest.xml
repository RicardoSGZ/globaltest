<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rs1.globaltest">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name="com.rs1.globaltest.ViewActivity"
            android:label="@string/view_edit"
            android:parentActivityName="com.rs1.globaltest.StorageActivity"></activity>
        <activity
            android:name="com.rs1.globaltest.AddActivity"
            android:label="@string/add"
            android:parentActivityName="com.rs1.globaltest.StorageActivity" />
        <activity
            android:name="com.rs1.globaltest.StorageActivity"
            android:label="@string/storage"
            android:parentActivityName="com.rs1.globaltest.MainActivity" />
        <activity
            android:name="com.rs1.globaltest.ListActivity"
            android:label="@string/lists"
            android:parentActivityName="com.rs1.globaltest.MainActivity" />
        <activity
            android:name="com.rs1.globaltest.FragmentsActivity"
            android:label="@string/fragments"
            android:parentActivityName="com.rs1.globaltest.MainActivity" />
        <activity
            android:name="com.rs1.globaltest.NotificationActivity"
            android:label="@string/notifications"
            android:parentActivityName="com.rs1.globaltest.MainActivity" />
        <activity
            android:name="com.rs1.globaltest.WebBrowserActivity"
            android:label="@string/webbrowser"
            android:parentActivityName="com.rs1.globaltest.MainActivity" />
        <activity
            android:name="com.rs1.globaltest.CalendarActivity"
            android:label="@string/calendar"
            android:parentActivityName="com.rs1.globaltest.MainActivity" />
        <activity android:name="com.rs1.globaltest.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>